# Default server configuration
#
server {
    root /var/www/voice/build;

    index index.html index.htm index.nginx-debian.html;

    server_name freefaint.ru;

    location /admin {
	alias /var/www/voice/build;
	index index.html;
	try_files $uri $uri/ =404;
    }

    location /api/v1 {
        proxy_set_header   X-Forwarded-For $remote_addr;
        proxy_set_header   Host $http_host;
        proxy_pass         http://127.0.0.1:8081;
    }

    location /files/ {
	proxy_set_header	X-Forwarded-For $remote_addr;
	proxy_set_header	Host $http_host;
	proxy_pass		http://127.0.0.1:8081;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/freefaint.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/freefaint.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    root /var/www/zhenya/build;
    
    server_name zhenya.freefaint.ru;

    index index.html;

    location /api3 {
        proxy_set_header   X-Forwarded-For $remote_addr;
        proxy_set_header   Host $http_host;
        proxy_pass         http://127.0.0.1:8082;
    }

    location /admin {
        alias /var/www/zhenya/build;
        index index.html;
        try_files $uri $uri/ =404;
    }


    # listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/freefaint.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/freefaint.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

