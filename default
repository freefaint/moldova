server {
    if ($host = zhenya.freefaint.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = www.freefaint.ru) {
        return 301 https://freefaint.ru$request_uri;
    } # managed by Certbot

    if ($host = freefaint.ru) {
	return 301 https://$host$request_uri;
    }

    listen 80 ;
    listen [::]:80 ;
    server_name zhenya.freefaint.ru www.freefaint.ru freefaint.ru;
    return 404; # managed by Certbot
}